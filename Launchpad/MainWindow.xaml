<Window x:Class="Launchpad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launchpad"
        mc:Ignorable="d"
        Title="Thistlefern Cockpit and Lanuchpad" Height="540" Width="960"
        Style="{StaticResource {x:Type Window}}"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Projects" Margin="10,10,2,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="Create new Spring project (under development)"/>
                <ListBox
                    x:Name="lbFolders"
                    Grid.Row="1"
                    ItemsSource="{Binding FolderList}"
                    MouseDoubleClick="ListView_MouseDoubleClick"
                    SelectionChanged="ListView_SelectionChange">
                </ListBox>
            </Grid>
        </GroupBox>

        <GroupBox Padding="5" Grid.Column="1" Header="Project Actions" Margin="2,10,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Explore">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox 
                        x:Name="tbPath" 
                        IsReadOnly="True"
                        Grid.Row="0"
                        />
                        <TreeView
                        x:Name="tvFolderTree" 
                        Grid.Row="1"
                        RenderTransformOrigin="0.5,0.5">
                            <TreeView.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform AngleY="-0.255"/>
                                    <RotateTransform/>
                                    <TranslateTransform Y="-0.396"/>
                                </TransformGroup>
                            </TreeView.RenderTransform>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <TextBlock Text="{Binding Name}" />
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="False" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=Parent}" Value="{x:Null}">
                                            <Setter Property="IsExpanded" Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Actions" Grid.Column="1">
                    <StackPanel>
                        <Button Content="Copy path" Click="Btn_CopyPath"/>
                        <Button Content="Explore Project" Click="OpenIn_explorer"/>
                        <Button Content="Command Project" Click="OpenIn_cmd"/>
                        <Button Content="Open in IntelliJ" Click="Button_Click"/>
                        <Button Content="Open in Notepad++ (Unsupported)" Click="Button_NotepadPlusPlus"/>
                        <Button Content="Open in VS Code (under development)"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
